<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_stock_quant_inventory_editable_inherit_changes" model="ir.ui.view">
    <field name="name">stock.quant.inventory.list.editable.inherit.changes</field>
    <field name="model">stock.quant</field>
    <!-- هذا الـ External ID اللي عندك -->
    <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
    <field name="arch" type="xml">
      <!-- زر Changes بعد History مباشرة -->
      <xpath expr="//list/button[@name='action_inventory_history']" position="after">
        <button name="action_open_changes"
                type="object"
                string="Changes"
                class="btn btn-link text-primary"
                icon="fa-exchange"/>
      </xpath>
    </field>
  </record>
</odoo>

